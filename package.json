{
  "name": "etterglod",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently -n FE,API -c auto \"npm --prefix frontend run dev\" \"npm --prefix backend run dev\"",
    "build": "npm --prefix frontend run build && npm --prefix backend run build",
    "lint": "eslint \"frontend/src/**/*.{ts,tsx,js,jsx}\" \"backend/src/**/*.{ts,js}\"",
    "lint:fix": "eslint --fix \"frontend/src/**/*.{ts,tsx,js,jsx}\" \"backend/src/**/*.{ts,js}\""
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.2"
  }
}
